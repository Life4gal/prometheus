function(${PROJECT_NAME_PREFIX}ATTACH_EXTERNAL_GLFW)
	cmake_language(
			CALL
			${PROJECT_NAME_PREFIX}EXTERNAL_INSTALL_CPM
			NAME glfw
			GIT_TAG 3.4
			GITHUB_REPOSITORY "glfw/glfw"
			OPTIONS "BUILD_SHARED_LIBS OFF" "GLFW_BUILD_EXAMPLES OFF" "GLFW_BUILD_TESTS OFF" "GLFW_BUILD_DOCS OFF" "GLFW_INSTALL OFF"
	)

	target_link_libraries(
			${PROJECT_NAME}
			PRIVATE
			glfw
	)
endfunction(${PROJECT_NAME_PREFIX}ATTACH_EXTERNAL_GLFW)
